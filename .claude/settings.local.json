{
  "permissions": {
    "allow": [
      "Bash(./scripts/test-examples.sh:*)",
      "Bash(./target/debug/cuenv:*)",
      "Bash(bun:*)",
      "Bash(cargo:*)",
      "Bash(gh:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(nix:*)",
      "WebFetch(domain:github.com)",
      "Bash(RUST_LOG=info nix develop -c cargo run -- run --audit test-audit-mode -f test-filesystem-security.cue)",
      "Bash(RUST_LOG=info nix develop -c cargo run -- run --audit test-audit-mode)",
      "Bash(tar:*)",
      "Bash(mkdir:*)",
      "Bash(curl:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)"
    ],
    "deny": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "nix fmt"
          }
        ]
      }
    ]
  }
}